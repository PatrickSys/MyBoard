{
  "name": "host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/host",
  "sourceRoot": "apps/host/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": [
    "@myboard/mb-notes",
    "@myboard/mb-pomodoro"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pnpm exec vite build",
            "cwd": "packages/mb-notes"
          },
          {
            "command": "pnpm exec vite build",
            "cwd": "packages/mb-pomodoro"
          },
          {
            "command": "pnpm exec next build apps/host"
          }
        ]
      }
    }
  }
}
